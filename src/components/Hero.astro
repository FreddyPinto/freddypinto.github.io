---
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
---

<div class="flex items-center gap-4 pb-6 lg:pb-10">
  <img
    class="rounded-full p-1 ring-2 ring-gray-300 size-16 lg:size-24"
    src="/profile-picture.webp"
    alt="Freddy"
  />
  <div>
    <h1
      class="bg-gradient-to-r from-sky-200 to-fuchsia-400 bg-clip-text text-transparent text-3xl md:text-4xl lg:text-5xl font-bold pb-0.5 lg:pb-1"
    >
      Hola, soy Freddy
    </h1>
    <a
      href="https://www.linkedin.com/in/freddypinto-"
      target="_blank"
      rel="noopener"
      class="flex transition hover:scale-105 pt-0.5 md:pt-1"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
</div>

<h2 class="text-xl lg:text-2xl text-wrap max-w-3xl">
  <span
    class="bg-gradient-to-r from-yellow-200 to-amber-300 bg-clip-text text-transparent opacity-90 font-semibold"
    >Data Scientist & Python Developer
  </span><span class="opacity-75"
    >con background en Procesos Qu√≠micos, especializado en
  </span><span class="font-semibold text-red-200/90"
    >Machine Learning e Inteligencia Artificial</span
  >
</h2>

<div class="flex gap-x-4 mt-8 flex-wrap">
  <SocialPill href="https://www.linkedin.com/in/freddypinto-">
    <LinkedInIcon class="size-4 md:size-6" />
    LinkedIn
  </SocialPill>
  <SocialPill href="https://github.com/FreddyPinto">
    <GitHubIcon class="size-4 md:size-6" />
    GitHub
  </SocialPill>
  <SocialPill href="mailto:freddypinto@outlook.com">
    <MailIcon class="size-4 md:size-6" />
    freddypinto@outlook.com
  </SocialPill>
</div>
