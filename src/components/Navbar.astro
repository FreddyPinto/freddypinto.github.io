---
import CodeIcon from "../icons/Code.astro"
---
<nav>
  <div
    class="max-w-screen-lg flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a
      href="https://flowbite.com/"
      class="flex items-center space-x-3"
    >
      <CodeIcon />
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class=" transition inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-400 rounded-lg md:hidden hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-white/10"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full mx-auto md:block md:w-auto" id="navbar-default">
      <ul
        class="flex flex-col p-4 md:px-4 md:py-1 mt-4 border border-white/10 rounded-lg bg-gray-800 md:bg-gradient-to-r from-gray-900 to-gray-800 opacity-80 md:flex-row md:space-x-8 md:mt-0 md:rounded-full md:shadow-custom"
      >
        <!-- <li>
          <a
            href="#"
            class="block py-2 px-3 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500"
            aria-current="page">Home</a
          >
        </li> -->
        <li>
          <a
            href="#proyectos"
            class="block py-2 px-3 rounded transition hover:bg-white/10 md:hover:bg-transparent md:border-0 md:hover:text-gray-400 md:p-0"
            >Proyectos</a
          >
          <!-- <a href="#proyectos" class="transition hover:text-gray-400">Proyectos</a> -->
        </li>
        <li>
          <a
            href="#sobre-mi"
            class="block py-2 px-3 rounded transition hover:bg-white/10 md:hover:bg-transparent md:border-0 md:hover:text-gray-400 md:p-0"
            >Sobre mí</a
          >
        </li>
        <li>
          <a
            href="#contacto"
            class="block py-2 px-3 rounded transition hover:bg-white/10 md:hover:bg-transparent md:border-0 md:hover:text-gray-400 md:p-0"
            >Contacto</a
          >
        </li>
        <!-- <li>
          <a
            href="#"
            class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-gray-400 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-white/10 dark:hover:text-white md:dark:hover:bg-transparent"
            >Educación</a
          >
        </li> -->
      </ul>
    </div>
  </div>
</nav>

<script
  src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"
></script>
