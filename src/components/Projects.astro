---
import SocialPill from "./SocialPill.astro";
import FastAPI from "../icons/FastAPI.astro";
import Python from "../icons/Python.astro";
import AWS from "../icons/AWS.astro";
import Streamlit from "../icons/Streamlit.astro";
import GitHub from "../icons/GitHub.astro";
import Link from "../icons/Link.astro";
import PowerBI from "../icons/PowerBI.astro";

const TAGS = {
  FASTAPI: {
    name: "FastAPI",
    class: "bg-white/5 border border-white/10 text-white",
    icon: FastAPI,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#003159] text-white",
    icon: Python,
  },
  AMAZON: {
    name: "Amazon Web Services",
    // class: "bg-white/5 border border-white/10 text-white",
    icon: AWS,
  },
  STREAMLIT: {
    name: "Streamlit",
    // class: "bg-white/5 border border-white/10 text-white",
    icon: Streamlit,
  },
  POWERBI: {
    name: "Power BI",
    // class: "bg-white/5 border border-white/10 text-white",
    icon: PowerBI,
  },
};
const PROJECTS = [
  {
    title: "Yoogle - Análisis de Mercado Vegetariano",
    description:
      "Data product que permite analizar el mercado de comida vegetariana en EE. UU. utilizando datos de Yelp y Google Maps.",
    link: "https://yelp-app-maps-reviews-and-recommendations-zixvqjteszdggb4izapp.streamlit.app/",
    github:
      "https://github.com/Insights-Labs-Consultant-Agency/yelp-google-maps-reviews-and-recommendations",
    image: "/projects/yoogle.webp",
    tags: [TAGS.STREAMLIT, TAGS.AMAZON],
  },
  {
    title: "RecSys API para Juegos de Steam",
    description:
      "API REST que proporciona datos de Steam y recomendaciones de juegos basadas en un modelo de aprendizaje automático.",
    link: "https://recsys-steam-api.onrender.com/",
    github:
      "https://github.com/FreddyPinto/recsys-steam-games",
    image: "/projects/steam-api.webp",
    tags: [TAGS.FASTAPI, TAGS.PYTHON],
  },
  {
    title: "Análisis y Visualización de Datos de Siniestros Viales",
    description:
      "Análisis y visualización de datos de siniestros viales en Buenos Aires entre 2016 y 2021.",
    link: "https://project.novypro.com/jt9pRv",
    github:
      "https://github.com/FreddyPinto/road-crashes-dataviz",
    image: "/projects/dashboard.webp",
    tags: [TAGS.POWERBI, TAGS.PYTHON],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article>
      <img
        class="rounded shadow-2xl shadow-white/10 mb-4"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <h3 class="text-2xl font-semibold bg-gradient-to-r from-yellow-200 to-amber-300 bg-clip-text text-transparent mb-2">
        {title}
      </h3>

      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>

      <p class="text-lg mb-4 text-pretty">{description}</p>
      
      <footer class="flex items-end justify-start mt-4 mb-6 gap-x-4">
        {github && (
          <SocialPill href={github}>
            <GitHub class="size-4 md:size-6" />
            Code
          </SocialPill>
        )}
        {link && (
          <SocialPill href={link}>
            <Link class="size-4 md:size-6" />
            Preview
          </SocialPill>
        )}
      </footer>
    </article>
  ))
}
